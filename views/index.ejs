    <nav class="navbar">
        <div class="container-fluid">
            <form class="d-flex" role="search" action="https://www.google.com/search" target="_blank">
                <input class="form-control me-1" name="q" type="search" placeholder="Google Search" aria-label="Search">
                <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
            <div id="weather">
                <div>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>

    </nav>
    <main>
        <div class="container d-flex flex-column align-items-center">
            <h2 id="clock">00:00</h2>
            <h1 id="greeting" class="hidden"></h1>
            <span id="cheer" class="mb-2"></span>
            <form id="login-form" class="hidden">
                <input required maxlength="15" type="text" placeholder="What Is Your Name?"
                    onfocus="this.placeholder=''" onblur="this.placeholder='What Is Your Name?'" />
            </form>
            <div class="next-greeting hidden">
                <form id="todo-form">
                    <input type="text" placeholder="할 일 입력하세요" required onfocus="this.placeholder=''"
                        onblur="this.placeholder='할 일 입력하세요'">
                </form>
                <div id="todo-div">
                    <ul id="todo-list"></ul>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div id="quotes">
            <span></span>
            <span class="hidden"></span>
        </div>

    </footer>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
